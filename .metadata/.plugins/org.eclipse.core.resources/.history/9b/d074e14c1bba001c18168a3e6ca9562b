package day0412;

import java.util.Arrays;
import java.util.Scanner;

public class day0412_3 {

	public static void main(String[] args) {

		int[] arr = { 3, 2, 1, 5, 4 };
		int temp = 0;
		
		System.out.print("배열전 " + Arrays.toString(arr));
		for(int i = 0; i <= arr.length; i++) {
			for(int j = 0; j < arr.length-1; j++) {
				if(arr[j] > arr[j+1]) {
					temp = arr[j];
					arr[j] = arr[j+1];
					arr[j+1] = temp;
					System.out.print("배열후 " + Arrays.toString(arr));
				}
			}
		}
	}
}